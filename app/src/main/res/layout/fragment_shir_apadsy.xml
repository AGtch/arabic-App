<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.ShirApadsyFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:text="@string/shar_abassy"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <!-- TODO: Update blank fragment layout -->

                <Button
                    android:id="@+id/shar_abaasy_go_to_doctor_book_id"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/regular"
                    android:text="@string/part1"
                    android:textSize="23sp"
                    app:drawableRightCompat="@drawable/pdficon" />

                <Button
                    android:id="@+id/shar_abaasy_go_to_doctor_book2_id"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/regular"
                    android:text="@string/part2"
                    android:textSize="23sp"
                    app:drawableRightCompat="@drawable/pdficon" />

                <Button
                    android:id="@+id/shar_abaasy_go_to_student_book_id"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/regular"
                    android:text="@string/student_book"
                    android:textSize="23sp"
                    app:drawableRightCompat="@drawable/pdficon" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>